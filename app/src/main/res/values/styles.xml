<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text_Style">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#EEC64343</item>
    </style>
    
    <style name="Style_Button">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#95579F</item>
        <item name="android:padding">26dp</item>

    </style>
    <style name="Text_Style_map">
        <item name="android:textColor">#ECECEC</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>

    </style>

</resources>